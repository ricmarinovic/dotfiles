# #!/usr/bin/env bash

set -e

dir=$(pwd -P)
cd $dir

ln -shf $dir/git/gitconfig.symlink ~/.gitconfig
ln -shf $dir/git/gitignore.symlink ~/.gitignore_global
ln -shf $dir/system/bash_profile.symlink ~/.bash_profile
ln -shf $dir/system/hyper.symlink ~/.hyper.js

mkdir -p ~/Library/Application\ Support/Code/User
ln -shf $dir/vscode/settings.json ~/Library/Application\ Support/Code/User/
ln -shf $dir/vscode/keybindings.json ~/Library/Application\ Support/Code/User/

ln -shf $dir/vscode/snippets/elixir.json ~/Library/Application\ Support/Code/User/snippets
ln -shf $dir/vscode/snippets/ruby.json ~/Library/Application\ Support/Code/User/snippets
ln -shf $dir/vscode/snippets/javascript.json ~/Library/Application\ Support/Code/User/snippets
ln -shf $dir/vscode/snippets/rust.json ~/Library/Application\ Support/Code/User/snippets
ln -shf $dir/vscode/snippets/json.json ~/Library/Application\ Support/Code/User/snippets

echo "Files linked!"
