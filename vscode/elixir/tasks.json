{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mix test",
      "type": "shell",
      "command": "mix test --color",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "mix test file",
      "type": "shell",
      "command": "mix test ${file} --color",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "mix test line",
      "type": "shell",
      "command": "mix test ${file}:${lineNumber} --color",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "mix test stale",
      "type": "shell",
      "command": "mix test --color --trace --stale",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
  ]
}
